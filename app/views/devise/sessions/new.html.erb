<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4">
    <h1 class="text-center login-title">Sign in to continue to Bootsnipp</h1>
    <div class="account-wall">
      <%= image_tag "login_user.png", class: "profile-img" %>
      <%= form_for(resource, as: resource_name,html: {:class => "form-signin"}, url: session_path(resource_name)) do |f| %>
        <%= f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "Email" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>

        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        <% end -%>
      </br>
        <%= f.submit "Log in", class: "btn btn-large btn-primary" %>
        <div>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

