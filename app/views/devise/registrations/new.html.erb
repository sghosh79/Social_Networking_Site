<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4">
    <h1 class="text-center login-title">Sign up</h1>
    <div class="account-wall">
      <%= image_tag "login_user.png", class: "profile-img" %>
      <%= form_for(resource, as: resource_name, html: {:class => "form-signin"}, url: registration_path(resource_name)) do |f| %>
        <%= f.text_field :first_name, autofocus: true, required: true, class: "form-control", placeholder: "First Name" %>
        <%= f.text_field :last_name, required: true, class: "form-control", placeholder: "Last Name" %>
        <%= f.email_field :email, required: true, class: "form-control", placeholder: "Email" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Repeat Password" %>
      </br>
        <%= f.submit "Create Account", class: "btn btn-large btn-primary" %>
        <div>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


