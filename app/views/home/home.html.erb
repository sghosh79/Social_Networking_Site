<div class="row margin-bottom-20">
  <div class='col-md-3'></div>
  <div class='col-md-6'>
    <div id="container-content" style="background-color: #FCFCFC;">
      <div class="row">
        <%= form_for [@user, Post.new], :html => { :multipart => true }, remote: true do |f| %>
          <%= f.text_area :message, placeholder: 'Put you thought here...', class: 'post-message auto-grow', 'data-no-turbolink' => true %>
          
          <div class="col-md-6 top-space">
            <%= f.file_field :image, class: "filestyle profile_pic", 'data-input'=>"false", "data-size"=> "sm", "data-buttonText"=> "", "data-iconName" => "fa fa-camera-retro fa-2x"%>
          </div>
          <div class="top-space col-md-6"> <%= f.submit "Post", class: 'btn btn-primary pull-right'  %> </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class='col-md-3'></div>
</div>  
<%= render :partial => "/shared/feeds", :locals=>{feeds: @feeds} %>
